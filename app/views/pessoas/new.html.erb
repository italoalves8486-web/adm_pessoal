<div class="card">
  <h2 class="card-title">Nova Pessoa</h2>


    <%= form_with(model: @pessoa, local: true) do |form| %>

      <div class="field">
        <%= form.label :nome %>
        <%= form.text_field :nome %>
      </div>

      <div class="field">
        <%= form.label :cpf %>
        <%= form.text_field :cpf %>
      </div>

      <div class="field">
        <%= form.label :rg %>
        <%= form.text_field :rg %>
      </div>

      <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email %>
      </div>

      <div class="field">
        <%= form.label :telefone %>
        <%= form.text_field :telefone %>
      </div>

      <div class="actions">
        <%= form.submit "Criar Pessoa" %>
      </div>

    <% end %>

    <a href="<%= pessoas_path %>" class="link-back">Voltar</a>

  </div>

</div>
