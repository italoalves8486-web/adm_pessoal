<div class="page-content">

  <div class="card-title">
    <h1>Pessoas</h1>
    <%= link_to 'Nova Pessoa', new_pessoa_path, class: "btn-action-link" %>
  </div>

  <!-- Se quiser manter o layout bonitinho, deixo um container vazio -->
  <div class="search-form-container card">

<div class="container mt-5 text-center text-light">

  <h1 class="mb-4">Pessoas</h1>

  <%= link_to "Nova Pessoa", new_pessoa_path, class: "fw-bold text-decoration-underline mb-4 d-block" %>

  <div class="card bg-dark text-light shadow-lg mx-auto" style="max-width: 700px;">
    <div class="card-body">

      <% if @pessoas.any? %>
        <table class="table table-dark table-hover mb-0">
          <thead>
            <tr>
              <th>Nome</th>
              <th>CPF</th>
              <th>E-mail</th>
              <th>AÃ§Ãµes</th>
            </tr>
          </thead>

          <tbody>
            <% @pessoas.each do |p| %>
              <tr>
                <td><%= p.nome %></td>
                <td><%= p.cpf %></td>
                <td><%= p.email %></td>
                <td>
                  <%= link_to "Ver", p, class: "btn btn-sm btn-primary" %>
                  <%= link_to "Editar", edit_pessoa_path(p), class: "btn btn-sm btn-warning" %>
                  <%= link_to "Excluir", p, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      <% else %>

        <p class="mt-3">Nenhuma pessoa cadastrada ainda.</p>

      <% end %>

    </div>
  </div>
</div>
